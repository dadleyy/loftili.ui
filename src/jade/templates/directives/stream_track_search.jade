.stream-track-search.directive
  .search-input-container
    input.search-input(type="text" ng-model="search.query" ng-change="update()" placeholder="search for tracks to add to the stream")
  .result-info(ng-if="results !== null")
    .no-results(ng-if="results.length === 0")
      p.no-result-text.bold no results found
    .results-container(ng-if="results.length > 0")
      .closer-container
        a.button.closer(ng-click="clear()")
          i.ionicon.close
      ul.result-list
        li.result-item.list-item(ng-repeat="result in results")
          .inner
            .title 
              a.track-link.foundry(ng-attr-href="/tracks/{{result.id}}") {{result.title}}
            .item-controls
              button.adder(ng-click="add(result)")
                i.ionicon.add


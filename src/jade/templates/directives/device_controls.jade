.device-controls.directive
  .control-list.btn-grp
    a.button(ng-click="restart()")
      i.ionicon.loop
    a.button(ng-click="stop()" ng-if="player_state === 1 || player_state === 2")
      i.ionicon.stop
    a.button(ng-click="play()" ng-if="player_state !== 1 && player_state !== 2")
      i.ionicon.play
  .errored-text-container(ng-if="player_state > 2")
    p.error-text {{ "device.errors.unable_to_communicate" | i18n }}
  .current-state-info(ng-if="player_state === 2 || player_state === 1")
    .info-bottom
      .current-playback
        .playback-info(ng-if="current_track.title")
          i.ionicon.loading(ng-if="player_state === 1")
          i.ionicon.radio-waves
          h1.current-track.gill.medium {{current_track.title}}
        .playback-info(ng-if="!current_track.title")
          i.ionicon.radio-waves
          h1.current-track.gill.medium

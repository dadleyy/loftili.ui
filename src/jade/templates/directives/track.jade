.track.directive
  .info
    .bit.name(ng-class="{missing: !track.title}")
      p {{ track.title || 'not found' }}
    .bit.artist
      p {{ track.artist.name || 'not found' }}
    .bit.actions(ng-if="manager")
      .container.button-group
        a.button.playback-trigger.play(ng-if="!playing" ng-click="play()")
          i.ionicon.play
        a.button.playback-trigger.stop(ng-if="playing" ng-click="stop()")
          i.ionicon.stop
        a.button.remover(ng-click="drop()")
          i.ionicon.close

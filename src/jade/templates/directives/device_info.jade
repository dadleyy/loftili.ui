.device-info
  .info-inner
    dl.device-name.gill.medium
      dt.gill.light name:
      dd.canberra.bold {{device.name.split('.')[0]}}
    dl.created.setting
      dt.gill.light created:
      dd.gill.medium {{device.createdAt | date:'MMM, yyyy'}}
    dl.ip_addr.setting
      dt.gill.light IP:
      dd.editable(lf-easy-input value="device.ip_addr" finish="saveIp")
    dl.port.setting
      dt.gill.light port:
      dd.editable(lf-easy-input value="device.port" finish="savePort")
    dl.shared-with
      dt.gill.light.upper device shares
      dd.shared-definition
        ul.shared-list(ng-if="permissions.length > 0")
          li.device-permission(ng-repeat="permission in permissions" data-level="{{permission.level}}")
            button.ionicon.close.remove.transparent(ng-click="removePermission(permission)")
            p.permission-level.sans {{permission.level | permissionLevel}}
            p.user-name.sans {{permission.user.username}}
        p.info-box.no-permissions(ng-if="!permissions.length") you havent shared this device
        .share-control(lf-device-share device="device" permissions="permissions")
